<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_signup">

    <TextView
        android:id="@+id/textView_main_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디" />

    <EditText
        android:id="@+id/editText_main_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedtextview" />

    <TextView
        android:id="@+id/textView_main_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_main_pw"
        android:background="@drawable/roundedtextview"/>

    <TextView
        android:id="@+id/textView_main_sname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가게명" />

    <EditText
        android:id="@+id/editText_main_sname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedtextview" />

    <TextView
        android:id="@+id/textView_main_slocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가게위치" />

    <EditText
        android:id="@+id/editText_main_slocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedtextview" />/>

    <Button
        android:id="@+id/button_main_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/textView_main_result" />

</LinearLayout>